{
  "version": 2,
  "controller": {},
  "workers": [
    {
      "type": "router",
      "realms": [
        {
          "name": "realm1",
          "roles": [
            {
              "name": "anonymous",
              "permissions": [
                {
                  "uri": "",
                  "match": "prefix",
                  "allow": {
                    "call": true,
                    "register": true,
                    "publish": true,
                    "subscribe": true
                  },
                  "disclose": {
                    "caller": false,
                    "publisher": false
                  },
                  "cache": true
                }
              ]
            }
          ]
        }
      ],
      "transports": [
        {
          "type": "web",
          "endpoint": {
            "type": "tcp",
            "port": 80
          },
          "paths": {
            "/": {
              "type": "static",
              "directory": "/app/build",
              "options": {
                "enable_directory_listing": true
              }
            },
            "info": {
              "type": "nodeinfo"
            },
            "ws": {
              "type": "websocket"
            }
          }
        }
      ]
    }
  ]
}
